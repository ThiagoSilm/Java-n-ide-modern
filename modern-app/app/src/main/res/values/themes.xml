<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.JavaNIDE" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Editor colors -->
        <item name="editorBackground">@color/editor_background</item>
        <item name="editorForeground">@color/editor_foreground</item>
        <item name="editorLineNumber">@color/editor_line_number</item>
        <item name="editorSelection">@color/editor_selection</item>
        <item name="editorCursor">@color/editor_cursor</item>
    </style>
</resources>
